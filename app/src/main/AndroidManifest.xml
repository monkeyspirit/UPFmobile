<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mobile.android.upf">


    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:icon="@mipmap/ic_launcher_upf"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_upf_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UPF">
        <activity
            android:name=".CartViewActivity"
            android:label="@string/title_activity_user_cart"/>
        <activity
            android:name=".ClientRegistrationActivity"
            android:parentActivityName=".RegistrationActivity" >
        </activity>
        <activity
            android:name=".AddNewOrderClientActivity"
            android:label="@string/title_activity_new_order"/>
        <activity
            android:name=".RestaurantViewElementForClientActivity"
            android:label="@string/title_activity_view_restaurant" />
        <activity android:name=".AddDishRestaurantActivity" />
        <activity
            android:name=".RestaurantViewElementActivity"
            android:label="@string/title_activity_view_restaurant" />
        <activity
            android:name=".AddRestaurantActivity"
            android:label="@string/title_activity_add_restaurant" />
        <activity
            android:name=".ClientHomepageActivity"
            android:label="@string/title_activity_client_homepage"
            android:theme="@style/Theme.UPF.NoActionBar" />
        <activity
            android:name=".RestaurantHomepageActivity"
            android:label="@string/title_activity_restaurant_homepage"
            android:theme="@style/Theme.UPF.NoActionBar" />
        <activity
            android:name=".AdminHomepageActivity"
            android:label="@string/title_activity_admin_homepage"
            android:theme="@style/Theme.UPF.NoActionBar" />
        <activity
            android:name=".DeliveryHomepageActivity"
            android:label="@string/title_activity_delivery_homepage"
            android:theme="@style/Theme.UPF.NoActionBar" />
        <activity
            android:name=".RegistrationActivity"
            android:parentActivityName=".ui.login.LoginActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>