<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobile.android.upf">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_upf"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_upf_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UPF">
        <activity
            android:name=".ClientHomepageActivity"
            android:label="@string/title_activity_client_homepage"
            android:theme="@style/Theme.UPF.NoActionBar" />
        <activity
            android:name=".DeliveryHomepageActivity"
            android:label="@string/title_activity_delivery_homepage"
            android:theme="@style/Theme.UPF.NoActionBar" />
        <activity
            android:name=".RegistrationActivity"
            android:parentActivityName=".ui.login.LoginActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".FirstActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>