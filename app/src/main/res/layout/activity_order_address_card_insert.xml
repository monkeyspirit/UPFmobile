<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderAddressCardInsertActivity">



    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_address"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_large">
                </TextView>

                <EditText
                    android:id="@+id/order_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:autofillHints="Try"
                    android:selectAllOnFocus="true"/>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="20dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/payment"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_large">
                </TextView>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/payment_method">

                    <RadioButton
                        android:id="@+id/cash_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cash" />

                    <RadioButton
                        android:id="@+id/card_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/card" />


                </RadioGroup>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    android:id="@+id/card_parameter">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/card_number"
                        android:textSize="@dimen/text_size_large">
                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/card_14digit"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:gravity="center_horizontal" />


                        <EditText
                            android:id="@+id/card_58digit"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:gravity="center_horizontal" />

                        <EditText
                            android:id="@+id/card_912digit"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:gravity="center_horizontal" />

                        <EditText
                            android:id="@+id/card_1316digit"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:gravity="center_horizontal" />


                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/card_possessor"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/text_size_large">

                    </TextView>

                    <EditText
                        android:id="@+id/card_namePossessor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_expiration"
                            android:layout_marginTop="10dp"
                            android:layout_weight="2"
                            android:textSize="@dimen/text_size_large">
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_csv"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/text_size_large">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="2">
                            <EditText
                                android:id="@+id/card_expmonth"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:maxLength="2"
                                android:inputType="number"
                                android:textAlignment="center"
                                android:gravity="center_horizontal" />
                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:text="@string/separator"
                                android:gravity="center"
                                android:textSize="@dimen/text_size_large"/>
                            <EditText
                                android:id="@+id/card_expyear"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:maxLength="2"
                                android:inputType="number"
                                android:textAlignment="center"
                                android:gravity="center_horizontal"/>

                        </LinearLayout>

                        <EditText
                            android:id="@+id/card_csv"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:maxLength="3"

                            android:layout_weight="1"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>



                </LinearLayout>

                <Button
                    android:id="@+id/summary_btn"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_arrow_forward_24_white"
                    android:text="@string/summary"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </ScrollView>



    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>