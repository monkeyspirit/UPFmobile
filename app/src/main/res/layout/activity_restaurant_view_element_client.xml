<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantViewElementForClientActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/restaurant_pic_client"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/restaurant_name_element_tv_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="name"
                android:textSize="@dimen/text_size_extra_large" />

            <TextView
                android:id="@+id/restaurant_address_element_tv_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="address"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/restaurant_phone_element_tv_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="phone"
                android:textSize="@dimen/text_size_medium" />


            <TextView
                android:id="@+id/restaurant_emailAddress_element_tv_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="email"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/restaurant_description_element_tv_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="desc"
                android:textSize="@dimen/text_size_medium" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="20dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView7_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/dish"
                android:textSize="@dimen/text_size_extra_large" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_restaurant_dishes_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_gray">

            </androidx.recyclerview.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/light_gray"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>