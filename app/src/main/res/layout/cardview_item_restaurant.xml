<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/restaurant_card"
    android:layout_height="380dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="prova"
            android:textSize="@dimen/text_size_medium_large"
            android:textColor="@color/dark_grey"
            android:id="@+id/restaurant_name_element"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_size_mini"
            android:text="prova"
            android:textColor="@color/dark_grey"
            android:id="@+id/restaurant_address_element"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_size_mini"
            android:text="prova"
            android:textColor="@color/dark_grey"
            android:id="@+id/restaurant_phone_element"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_size_mini"
            android:text="prova"
            android:textColor="@color/dark_grey"
            android:id="@+id/restaurant_email_element"/>

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center"-->
<!--            android:text="prova"-->
<!--            android:textSize="13sp"-->
<!--            android:textColor="#2d2d2d"-->
<!--            android:id="@+id/restaurant_description_element"-->
<!--            android:visibility="invisible"/>-->


        <ImageView
            android:id="@+id/restaurant_card_pic"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textColor="@color/dark_grey"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/view_restaurant_card_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="6dp">

            <Button
                android:id="@+id/edit_restaurant_card_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="@color/secondary"
                android:drawableLeft="@drawable/ic_baseline_edit_24"
                android:text="@string/edit"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintEnd_toStartOf="@+id/delete_restaurant_card_btn"
                android:layout_marginRight="15dp"/>


            <Button
                android:id="@+id/delete_restaurant_card_btn"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/red"
                android:drawableLeft="@drawable/ic_baseline_delete_24"
                android:text="@string/delete"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_small"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>