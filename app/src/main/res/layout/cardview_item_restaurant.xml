<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/restaurant_card"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/cardview_elevation"
    card_view:cardCornerRadius="@dimen/cardview_corner_radius"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="name"
            android:textSize="@dimen/text_size_medium_large"
            android:textColor="@color/dark_grey"
            android:id="@+id/restaurant_name_element"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_size_mini"
            android:text="city"
            android:textColor="@color/dark_grey"
            android:id="@+id/restaurant_city_element"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_size_mini"
            android:text="address"
            android:textColor="@color/dark_grey"
            android:id="@+id/restaurant_address_element"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_size_mini"
            android:text="phone"
            android:textColor="@color/dark_grey"
            android:id="@+id/restaurant_phone_element"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_size_mini"
            android:text="email"
            android:textColor="@color/dark_grey"
            android:id="@+id/restaurant_email_element"/>

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center"-->
<!--            android:textSize="@dimen/text_size_mini"-->
<!--            android:text="description"-->
<!--            android:textColor="@color/dark_grey"-->
<!--            android:id="@+id/restaurant_description_element"/>-->

        <ImageView
            android:id="@+id/restaurant_card_pic"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textColor="@color/dark_grey"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"/>

        <!--<Button
            android:id="@+id/view_restaurant_card_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/edit_restaurant_card_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/cyan"
                android:drawableLeft="@drawable/ic_baseline_edit_24"
                android:text="@string/edit"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_mini"
                app:layout_constraintEnd_toStartOf="@+id/delete_restaurant_card_btn" />


            <Button
                android:id="@+id/delete_restaurant_card_btn"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:backgroundTint="@color/red"
                android:drawableLeft="@drawable/ic_baseline_delete_24"
                android:text="@string/delete"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_mini"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>