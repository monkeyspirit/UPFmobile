<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/restaurant_name_element_for_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="prova"
            android:textColor="#2d2d2d"
            android:textSize="13sp">

        </TextView>

        <TextView
            android:id="@+id/restaurant_address_element_for_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="prova"
            android:textColor="#2d2d2d"
            android:textSize="13sp">

        </TextView>

        <TextView
            android:id="@+id/restaurant_phone_element_for_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="prova"
            android:textColor="#2d2d2d"
            android:textSize="13sp">

        </TextView>

        <TextView
            android:id="@+id/restaurant_email_element_for_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="prova"
            android:textColor="#2d2d2d"
            android:textSize="13sp">

        </TextView>

        <TextView
            android:id="@+id/restaurant_description_element_for_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="prova"
            android:textColor="#2d2d2d"
            android:textSize="13sp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/call_restaurant_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chiama" />

            <Button
                android:id="@+id/email_restaurant_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email" />

            <Button
                android:id="@+id/nav_restaurant_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indicazioni" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>