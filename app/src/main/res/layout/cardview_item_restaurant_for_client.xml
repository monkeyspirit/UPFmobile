<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_restaurant_client"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="20dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/cardview_elevation"
    card_view:cardCornerRadius="@dimen/cardview_corner_radius"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/restaurant_card_pic_for_client"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_baseline_add_photo_alternate_24" />
        </TableRow>

        <TextView
            android:id="@+id/restaurant_name_element_for_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Name"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_size_medium_large"/>

        <TextView
            android:id="@+id/restaurant_city_element_for_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="City"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:id="@+id/restaurant_address_element_for_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Address"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:id="@+id/restaurant_phone_element_for_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Phone"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_size_medium"/>

        <TextView
            android:id="@+id/restaurant_email_element_for_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Email"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_size_medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/call_restaurant_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/call"
                    android:drawableLeft="@drawable/ic_baseline_call_24_white"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"/>
                <Button
                    android:id="@+id/email_restaurant_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/ic_baseline_email_24_white"
                    android:textSize="@dimen/text_size_small"
                    android:text="@string/write"
                    android:layout_marginStart="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <Button
                    android:id="@+id/nav_restaurant_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:text="@string/open_map"
                    android:drawableLeft="@drawable/ic_baseline_location_on_24_white"/>
            </TableRow>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>